@using Microsoft.AspNet.Identity


<div class="header-section">


    <!--toggle button start-->
    <a class="toggle-btn">
        <i class="fa fa-bars"></i>
    </a>
    <!--toggle button end-->
    <!--search start-->
    <!--search end-->
    <!--notification menu start -->
    <div class="menu-right">
        <ul class="notification-menu">
            <li>
                <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <img src="~/AdminTemplate/images/photos/user-avatar.png" alt="" />@User.Identity.GetUserName()<span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Log Out</a></li>

                    }
                </ul>
            </li>

        </ul>
    </div>
    <!--notification menu end -->

</div>



